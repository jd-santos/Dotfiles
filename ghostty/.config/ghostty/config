# Ghostty Terminal Configuration

# Font Configuration
font-size = 14

# Nerd Font Configuration
# Map Nerd Font icon ranges to a specific nerd font for better rendering
# Nerd Font codepoint ranges: https://github.com/ryanoasis/nerd-fonts/wiki/Glyph-Sets-and-Code-Points
font-codepoint-map = U+E5FA-U+E6B5,U+E700-U+E7C5,U+F000-U+F2E0,U+E200-U+E2A9,U+F500-U+FD46,U+E300-U+E3E3,U+F400-U+F532,U+2665,U+26A1,U+E0A0-U+E0A3,U+E0B0-U+E0C8,U+E0CA,U+E0CC-U+E0D4=Symbols Nerd Font Mono

# Adjust nerd font icon height to make them more visible
# Reduced to 15% to better match text baseline
adjust-icon-height = 15%

# Theme
theme = dracula

# Window
window-padding-x = 8
window-padding-y = 8

# Shell
shell-integration = detect
shell-integration-features = cursor,sudo,title

# Cursor
cursor-style = block
cursor-style-blink = false

# Mouse
mouse-hide-while-typing = true
copy-on-select = true
