{
  "$schema": "https://opencode.ai/config.json",
  "theme": "dracula",
  "agent": {
    "build": {
      "model": "openrouter/google/gemini-2.5-flash",
      "tools": {
        "write": true,
        "read": true,
        "grep": true,
        "list": true,
        "todoread": true,
        "todowrite": true,
        "webfetch": true,
        "patch": true,
        "edit": true,
        "bash": true
      },
      "permission": {
        "write": "ask",
        "edit": "ask",
        "patch": "ask",
        "bash": "ask"
      }
    },
    "build-smart": {
      "model": "openrouter/google/gemini-2.5-pro",
      "tools": {
        "write": true,
        "read": true,
        "grep": true,
        "list": true,
        "todoread": true,
        "todowrite": true,
        "webfetch": true,
        "patch": true,
        "edit": true,
        "bash": true
      },
      "permission": {
        "write": "ask",
        "edit": "ask",
        "patch": "ask",
        "bash": "ask"
      }
    },
    "plan": {
      "model": "openrouter/google/gemini-2.5-pro",
      "tools": {
        "grep": true,
        "list": true,
        "todoread": true,
        "todowrite": true,
        "webfetch": true,
        "write": false,
        "edit": false,
        "bash": false
      }
    },
    "ask": {
      "model": "openrouter/anthropic/gemini-2.5-flash",
      "tools": {
        "grep": true,
        "list": true,
        "todoread": true,
        "todowrite": true,
        "webfetch": true,
        "write": false,
        "edit": false,
        "bash": false
      }
    }
  },
  "autoupdate": true,
  "formatter": {
    "prettier": {
      "command": [
        "prettier",
        "--write",
        "{file}"
      ],
      "extensions": [
        "js",
        "jsx",
        "ts",
        "tsx",
        "json",
        "css",
        "scss",
        "html",
        "md"
      ]
    }
  }
}
